@model VidlyApp.ViewModels.CustomerFormViewModel
@{
    ViewData["Title"] = "New Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>New Customer</h2>

@using (Html.BeginForm("Create", "Customers", FormMethod.Post, new { @class = "row"})) {
    <div class="form-group col-md-12 mb-3">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="form-group col-md-12 mb-3">
        @Html.LabelFor(m => m.Birthdate)
        @Html.TextBoxFor(m => m.Birthdate, "{0:yyyy-MM-dd}", new { @class = "form-control" })
    </div>    
    <div class="form-group col-md-12 mb-3">
        @Html.LabelFor(m => m.MembershipTypeId)
        @Html.DropDownListFor(m => m.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select Membership Type", new { @class = "form-control" })
    </div>
    <div class="form-check col-md-12 mb-3">
        @Html.CheckBoxFor(m => m.IsSubscribedToNewsletter, new {  @class = "form-check-input pl-6", id="isSubscribedToNewsletter", type = "checkbox" })
        <label class="form-check-label" for="isSubscribedToNewsletter">
            Subscribed to Newsletter?
        </label>
    </div>
    @Html.HiddenFor(m => m.Id)
    <button type="submit" class="btn btn-primary col-md-3">Save</button>
}